<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RESTCountries" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white_grey</item>
        <item name="colorPrimaryVariant">@color/white_grey</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey_t</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="ToolbarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorSecondary">@color/dark_grey</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/dark_grey_t</item>
        <item name="iconifiedByDefault">false</item>
    </style>


    <style name="BackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>


    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/dark_grey</item>
    </style>


    <style name="TextViewTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hammersmith</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/hammersmith</item>
        <item name="android:textColor">@color/dark_grey_t</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ImageViewStyle">
        <item name="tint">@color/dark_grey_t</item>
    </style>
</resources>